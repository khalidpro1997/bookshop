<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".ui.AddActivity">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.024" />

        <EditText
            android:id="@+id/addBookNameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Book Name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.048" />

        <EditText
            android:id="@+id/addDescriptionEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:hint="Book Description"
            app:layout_constraintTop_toBottomOf="@+id/addBookNameEt"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/addPriceEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:hint="Price"
            android:inputType="numberDecimal"
            app:layout_constraintTop_toBottomOf="@+id/addDescriptionEt"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/addQtyEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:hint="Quantity"
            android:inputType="numberDecimal"
            app:layout_constraintTop_toBottomOf="@+id/addPriceEt"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/addPublisherEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:hint="publisher"
            app:layout_constraintTop_toBottomOf="@+id/addQtyEt"
            tools:layout_editor_absoluteX="0dp" />


        <Spinner
            android:id="@+id/addCategoriesSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:entries="@array/bookCategories"
            android:minHeight="50dp"
            app:layout_constraintTop_toBottomOf="@+id/addPublisherEt"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/addBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addCategoriesSpinner"
            app:layout_constraintVertical_bias="0.433" />

</androidx.constraintlayout.widget.ConstraintLayout>